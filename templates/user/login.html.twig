{% extends 'base.html.twig' %}

{% block body %}
    <div class="container align-content-center" style="background-image: url({{ asset('images/fond3.jpg') }});width: 100%;height: 800px; padding: 100px">
        <div style="width: 60%;margin:auto;border:1px solid #800040; border-radius: 5px; padding: 50px;background-color: hsla(50, 33%, 25%, .75);" class="">
        <h1>Connexion</h1>
        <form method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="_username" class="form-control" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label>Mot de passe</label>
                <input type="password" name="_password" class="form-control">
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">
                    Se connecter
                </button>
            </div>
        </form>
        </div>
    </div>
{% endblock %}

{% block title %}
{{ parent() }} - login
{% endblock %}

